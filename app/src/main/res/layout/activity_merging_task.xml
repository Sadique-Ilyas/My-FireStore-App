<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30sp"
    tools:context=".MergingTask">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merging Tasks"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/firstName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/surName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sur Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/myPriority1"
        android:layout_width="match_parent"
        android:hint="Priority"
        android:layout_height="wrap_content"
        android:inputType="number" />

    <Button
        android:id="@+id/saveButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

    <Button
        android:id="@+id/viewInfoButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Info" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:onClick="paginationActivity"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/viewInfo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

    </androidx.core.widget.NestedScrollView>

</LinearLayout>