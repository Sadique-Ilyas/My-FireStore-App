<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30sp"
    tools:context=".SubCollectionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sub Collection"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/firstName6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/surName6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sur Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/myPriority6"
        android:layout_width="match_parent"
        android:hint="Priority"
        android:layout_height="wrap_content"
        android:inputType="number" />

    <EditText
        android:id="@+id/myTags6"
        android:layout_width="match_parent"
        android:hint="Tags"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <Button
        android:id="@+id/saveButton6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

    <Button
        android:id="@+id/viewInfoButton6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Info" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/viewInfo6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

    </androidx.core.widget.NestedScrollView>

</LinearLayout>